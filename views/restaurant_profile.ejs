<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/_head %>
    <title>Restaurant Profile | Ordo</title>
  </head>

  <body id="rest-profile">
    <div id='nav-header'>
      <a href="/">
        <h1 id="logotype">
          Ordo
        </h1>
      </a>
      <!-- if user is logged in -->
      <nav>
        <ul>
          <li>
              <form action="/restaurant/<%=results[0].restaurant_id+1%>/current" method="GET">
                  <input type="submit" value="Current Order">
              </form>
            </form>
          </li>
          <li>
            <a href="/">Profile</a>
          </li>
          <li>
            <a href="/logout">Logout</a>
          </li>
        </ul>
      </nav>


    </div>

    <div class="container">

  <h2>PROFILE page for restaurant </h2>


    <!-- loop through the restaurant's menu -->


     <!-- Id of res is results[0].id -->


     <section id="add-item">
      <p>Add an item to your menu</p>
      <form action="/restaurant/add-item" method="POST">
        <div class="item">
          <label>Name:</label>
          <input type="text" name="name">
        </div>
        <div class="item">
          <label>Description:</label>
          <input type="text" name="description">
        </div>
        <div class="item">
          <label>Price:</label>
          <input type="text" name="price">
        </div>
        <label for="dropdown">Category:</label>
        <select name="category">
          <option value="Snacks">Snacks</option>
          <option value="Snacks">Appetizer</option>
          <option value="Snacks">Main Dish</option>
          <option value="Snacks">Dessert</option>
          <option value="Snacks">Drinks</option>
        </select>
        <input type='submit' value="Save">
      </form>
    </section>

    <!-- loop through the restaurant's menu -->

    <div class="menu-item">
      <% for (items in results) {%>
      <form class="profile" action="/restaurant/update-item" method="POST">
        <input type="text" name="item_id" value="<%= results[items].id %>">
        <input type="text" name="item_category" value="<%= results[items].category %>">
        <input type="text" name="item_name" value="<%= results[items].item_name %>">
        <input type="text" name="item_description" value="<%=results[items].item_description%>">
        <input type="text" name="price" value="<%=results[items].price%>">
        <input class="send" type="submit" value="Submit Edit">
      </form>
      <% } %>
    </div>

     <!-- Id of res is results[0].id -->


  </div><!--/container-->

  <% include partials/_footer %>

  </body>
</html>
