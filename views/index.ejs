  <section id="rest-list">
    <!--loop through restaurant db -->
      <% results.forEach((restaurant) => { %>
        <div class="restaurant">
          <div class="image">
            <img src="/img/<%=restaurant.picture %>">
          </div>
          <div class="info">
            <header>
            <p class="name"><%= restaurant.name %></p>
            <p class="type"><%= restaurant.type %></p>
            <form method="GET" action="/user/<%=restaurant.id%>/menu">
              <button type="submit">View menu</button>
            </form>
            </header>
            <p class="address"><%= restaurant.address %></p>
            <p class="description"><%= restaurant.description %></p>

          </div>

        </div>
      <% }) %>
  </section>

